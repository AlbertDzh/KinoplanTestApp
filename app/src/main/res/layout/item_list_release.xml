<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="265dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/releasePoster"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_banner"
                android:adjustViewBounds="true"/>

    </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/releaseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "Анимация"
                style="@style/TextAppearance.OKUI.Caption1"
                android:textAlignment="center"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/releaseTitle"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                tools:text = "Айда"
                style="@style/Base.TextAppearance.OKUI.Headline"
                android:layout_marginTop="8dp"
                android:maxLines = "2"
                android:ellipsize="end"/>


</LinearLayout>